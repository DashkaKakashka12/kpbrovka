<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BroCheckReviews"
    android:background="#EBEAEA">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:onClick="hotelEdit"
            android:id="@+id/menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cross_icon" />

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Отзывы"
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginStart="10dp"
        android:paddingTop="18dp"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="13dp"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <TextView
            android:id="@+id/hotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Ренессанс Минск Конгресс Отель и СПА центр 5*" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Цена/качество" />
            <TextView
                android:id="@+id/int1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8,0" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="40dp"
                android:text="Комфорт" />
            <TextView
                android:id="@+id/int2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9,2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:progress="10"
                android:max="10"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"/>
            <ProgressBar
                android:id="@+id/progressBar2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:progress="10"
                android:max="10"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Чистота" />
            <TextView
                android:id="@+id/int3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9,8" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="40dp"
                android:text="Персонал" />
            <TextView
                android:id="@+id/int4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9,1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ProgressBar
                android:id="@+id/progressBar3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:progress="10"
                android:max="10"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"/>
            <ProgressBar
                android:id="@+id/progressBar4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:progress="10"
                android:max="10"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                style="?android:attr/progressBarStyleHorizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:text="Удобства" />
            <TextView
                android:id="@+id/int5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9,1"
                android:layout_marginEnd="170dp"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar5"
            android:layout_width="130dp"
            android:layout_height="2dp"
            android:progress="10"
            android:max="10"
            style="?android:attr/progressBarStyleHorizontal"/>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corners_grey">
            <TextView
                android:id="@+id/p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Популярные"
                android:gravity="center"
                android:textSize="13sp"
                android:layout_marginStart="5dp" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_down_icon"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listOfReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>