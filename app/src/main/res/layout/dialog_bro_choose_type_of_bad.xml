<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".DialogBroChooseHotelRoomMainFacilities">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">
        <CheckBox
            android:id="@+id/bed1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:id="@+id/textbed1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1 двухспальная кровать"
            android:textSize="18sp"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp">
        <CheckBox
            android:id="@+id/bedLittle2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:id="@+id/textbed2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2 односпальные кровати"
            android:textSize="18sp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp">
        <CheckBox
            android:id="@+id/bed2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:id="@+id/textbed3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2 двухспальные кровати"
            android:textSize="18sp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp">
        <CheckBox
            android:id="@+id/bedLittle1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginEnd="30dp"/>
        <TextView
            android:id="@+id/textbed4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1 односпальная кровать"
            android:textSize="18sp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

</LinearLayout>